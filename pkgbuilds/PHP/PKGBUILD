# Maintainer: Kevin Song <k c s o n g at utexas dot edu>
pkgname=energy-languages-php
pkgver=7.1.4
pkgrel=1
#makedepends=('build-essential')
arch=('x86_64')
pkgdesc="PHP for Energy Languages"
url="https://www.php.net/"
depends=()
source=('php-7.1.4.tar.xz')
sha256sums=('71514386adf3e963df087c2044a0b3747900b8b1fc8da3a99f0a0ae9180d300b')

build() {
    cd "${srcdir}/php-7.1.4"
    ./configure --prefix=/usr --enable-shmop --enable-pcntl --with-zlib --with-readline\
                --with-gmp
    make ${MAKEFLAGS}
}

package() {
    cd "${srcdir}/php-7.1.4"
    make INSTALL_ROOT="${pkgdir}" install
    cp php.ini-development ${pkgdir}/usr/lib/php.ini
    cd ${pkgdir}
    rm -rf '.channels'
    rm -rf '.depdb'
    rm -rf '.depdblock'
    rm -rf '.filemap'
    rm -rf '.lock'
    rm -rf '.registry'
}